// schema.prisma

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified Boolean   @default(false)

  // RBAC
  role String @default("user") // "admin", "user"

  // Auth
  accounts Account[]
  sessions Session[]

  // Billing
  stripeCustomerId   String?
  subscriptionStatus String? // "active", "canceled", "past_due", "trialing"

  // Trial
  trialEndsAt DateTime? // 7 days from signup

  // Onboarding
  onboardingComplete Boolean @default(false)

  // Voice Sessions
  voiceSessions VoiceSession[]
  preferences   UserPreferences?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("account")
}

// For Magic Links / Email Verification
model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

// ==========================================
// Voice AI Daily Companion Models
// ==========================================

model VoiceSession {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Session date (user's timezone, stored as start of day)
  date DateTime

  // Status: active | paused | processing | completed
  status String @default("active")

  // Time tracking (in seconds)
  totalUserSpeakingTime Int @default(0)
  maxDuration           Int @default(180) // 180 = 3 minutes

  // Post-processing results
  summaryText String?
  imageUrl    String?
  imageStyle  String  @default("dreamlike") // dreamlike | watercolor | geometric | sketch

  // Timestamps
  pausedAt    DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Transcript turns
  turns TranscriptTurn[]

  // Ensure one session per user per day
  @@unique([userId, date])
  @@map("voice_session")
}

model TranscriptTurn {
  id        String       @id @default(cuid())
  sessionId String
  session   VoiceSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  // Speaker: "user" | "ai"
  speaker String

  // Content
  text     String
  audioUrl String? // bunny.net URL

  // Timing (in seconds from session start)
  startTime Float
  duration  Float
  order     Int // sequence number

  createdAt DateTime @default(now())

  @@map("transcript_turn")
}

model UserPreferences {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Timezone (IANA format, e.g., "America/New_York")
  timezone String @default("UTC")

  // AI preferences
  imageStyle    String @default("dreamlike") // dreamlike | watercolor | geometric | sketch
  aiPersonality String @default("empathetic") // empathetic | curious

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_preferences")
}
