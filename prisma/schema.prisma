// schema.prisma

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified Boolean   @default(false)

  // RBAC
  role String @default("user") // "admin", "user"

  // Auth
  accounts Account[]
  sessions Session[]

  // Billing
  stripeCustomerId   String?
  subscriptionStatus String? // "active", "canceled", "past_due", "trialing"

  // Trial
  trialEndsAt DateTime? // 7 days from signup

  // Onboarding
  onboardingComplete Boolean @default(false)

  // Voice Sessions
  voiceSessions VoiceSession[]
  preferences   UserPreferences?

  // Reflection Sessions
  reflectionSessions ReflectionSession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("account")
}

// For Magic Links / Email Verification
model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

// ==========================================
// Voice AI Daily Companion Models
// ==========================================

model VoiceSession {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Session date (user's timezone, stored as start of day)
  date DateTime

  // Status: active | paused | processing | completed
  status String @default("active")

  // Recording attempt tracking (1 = first, 2 = retry, max 2 allowed)
  recordingAttempt Int @default(1)

  // Time tracking (in seconds)
  totalUserSpeakingTime Int @default(0)
  maxDuration           Int @default(180) // 180 = 3 minutes

  // Post-processing results
  summaryText String?
  imageUrl    String?
  imageStyle  String  @default("realistic") // realistic | dreamlike | watercolor | geometric | sketch

  // Audio archival status: pending | processing | completed | failed
  archivalStatus String @default("pending")

  // Timestamps
  pausedAt    DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Transcript turns
  turns TranscriptTurn[]

  // Ensure one session per user per day
  @@unique([userId, date])
  @@map("voice_session")
}

model TranscriptTurn {
  id        String       @id @default(cuid())
  sessionId String
  session   VoiceSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  // Speaker: "user" | "ai"
  speaker String

  // Content
  text     String
  audioUrl String? // bunny.net URL

  // Timing (in seconds from session start)
  startTime Float
  duration  Float
  order     Int // sequence number

  createdAt DateTime @default(now())

  @@map("transcript_turn")
}

model UserPreferences {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Timezone (IANA format, e.g., "America/New_York")
  timezone String @default("UTC")

  // AI preferences
  imageStyle    String @default("realistic") // realistic | dreamlike | watercolor | geometric | sketch
  aiPersonality String @default("empathetic") // empathetic | curious

  // Language preference (ISO 639-1 code)
  // Supported: en, es, fr, de, it, pt, nl, ja, ru, hi
  language String @default("en")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_preferences")
}

// Track deleted session attempts to enforce 2-recording limit per day
model DeletedSessionAttempt {
  id     String   @id @default(cuid())
  userId String
  date   DateTime // The date of the deleted session (start of day)
  
  createdAt DateTime @default(now())
  
  // Unique constraint: one record per user per day (tracks that an attempt was used)
  @@unique([userId, date])
  @@map("deleted_session_attempt")
}

// Cache daily AI greeting to avoid regenerating TTS on every page visit
model DailyGreeting {
  id     String   @id @default(cuid())
  userId String
  date   DateTime // Start of day (UTC)

  // Language of the greeting (ISO 639-1 code)
  language String @default("en")

  // Greeting content
  text        String
  audioBase64 String? // Base64 encoded audio for instant playback
  contentType String  @default("audio/mpeg")

  createdAt DateTime @default(now())

  // One greeting per user per day per language
  @@unique([userId, date, language])
  @@map("daily_greeting")
}

// ==========================================
// Reflection Session Models (10-min therapeutic conversations)
// ==========================================

model ReflectionSession {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Session date (user's timezone, stored as start of day)
  date DateTime

  // Status: active | paused | processing | completed
  status String @default("active")

  // Recording attempt tracking (max 1 allowed for reflections)
  recordingAttempt Int @default(1)

  // Time tracking (in seconds)
  totalUserSpeakingTime Int @default(0)
  maxDuration           Int @default(600) // 600 = 10 minutes

  // Post-processing results (no image for reflections)
  summaryText String?

  // Timestamps
  pausedAt    DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Transcript turns
  turns ReflectionTurn[]

  // Ensure one reflection session per user per day
  @@unique([userId, date])
  @@map("reflection_session")
}

model ReflectionTurn {
  id        String            @id @default(cuid())
  sessionId String
  session   ReflectionSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  // Speaker: "user" | "ai"
  speaker String

  // Content
  text     String
  audioUrl String? // bunny.net URL

  // Timing (in seconds from session start)
  startTime Float
  duration  Float
  order     Int // sequence number

  createdAt DateTime @default(now())

  @@map("reflection_turn")
}

// Track deleted reflection attempts to enforce 1-recording limit per day
model DeletedReflectionAttempt {
  id     String   @id @default(cuid())
  userId String
  date   DateTime // The date of the deleted session (start of day)

  createdAt DateTime @default(now())

  // Unique constraint: one record per user per day
  @@unique([userId, date])
  @@map("deleted_reflection_attempt")
}

// Cache daily reflection greeting to avoid regenerating TTS on every page visit
model DailyReflectionGreeting {
  id     String   @id @default(cuid())
  userId String
  date   DateTime // Start of day (UTC)

  // Language of the greeting (ISO 639-1 code)
  language String @default("en")

  // Greeting content
  text        String
  audioBase64 String? // Base64 encoded audio for instant playback
  contentType String  @default("audio/mpeg")

  createdAt DateTime @default(now())

  // One greeting per user per day per language
  @@unique([userId, date, language])
  @@map("daily_reflection_greeting")
}
